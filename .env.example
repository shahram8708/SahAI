# --- Flask/Server Secrets & Security ---
SECRET_KEY=change-this-in-prod
SESSION_COOKIE_SECURE=0

# --- Database ---
DATABASE_URL=sqlite:///sahai.db

# --- Logging ---
LOG_LEVEL=INFO

# --- File Uploads ---
UPLOAD_FOLDER=./app/static/uploads

# --- Rate Limiting ---
RATELIMIT_STORAGE_URI=memory://

# --- Google Gemini (AI) ---
# GEMINI_API_KEY=GEMINI_API_KEY
GEMINI_API_KEY=GEMINI_API_KEY
GEMINI_TEXT_MODEL=gemini-1.5-flash
# GEMINI_VISION_MODEL=gemini-2.0-flash-preview-image-generation
GEMINI_VISION_MODEL=gemini-1.5-flash
AI_REQUEST_TIMEOUT=3000
AI_MAX_RETRIES=3
AI_BACKOFF_BASE=0.6
AI_BACKOFF_MAX=4.0
# Gemini (required). Obtain from Google AI Studio.
GEMINI_API_KEY=YOUR_REAL_KEY_HERE
ENABLE_SAFETY_FILTERS=True
